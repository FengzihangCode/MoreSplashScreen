<Window x:Class="MoreSplashScreen.AdobePhotoshopSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Width="900" Height="600"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="20" Background="White" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- 信息 -->
            <StackPanel Grid.Column="0" Margin="40" VerticalAlignment="Center" Spacing="12">
                <!-- Logo -->
                <TextBlock>
                    <Run Text="ClassIsland" Foreground="#000000" FontSize="40" FontWeight="Bold"/>
                </TextBlock>

                <!-- 作者 -->
                <TextBlock Text="DannyFeng 作品" FontSize="16" Foreground="#555" Margin="0,0,0,6" />

                <!-- 版权声明 -->
                <TextBlock Text="Copyright (c) 2023-2025 HelloWRC. All rights reserved."
                           FontSize="12" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,20"/>

                <!-- 状态文字 -->
                <TextBlock x:Name="StatusTextBlock" Text="正在加载 ClassIsland" FontStyle="Italic" FontSize="14" Foreground="#444" />

                <!-- Contributers 名单 -->
                <TextBlock FontSize="11" Foreground="#666" TextWrapping="Wrap" Margin="0,20,0,0">
                    HelloWRC, Doctor-yoi, 姜胤, DSZDev, 流焰 xwx, 团子, 吕璟辰, jizilin6732, clover_yan, 干冰 DryIce, RoboMico, 
                    user111192, 零音 LyRin, LiPolymer, Amiya, Enzo Wu, itsHenry, 星澜曦光, kaokao221, 爱玩电脑的 WindowsXP, DannyFeng
                </TextBlock>
            </StackPanel>

            <!-- 插图 -->
            <Border Grid.Column="1" ClipToBounds="True">
                <Image Source="MoreSplashScreen/Assets/AdobePhotoshop/Foremist.JPG"
                       Stretch="UniformToFill"/>
            </Border>
        </Grid>
    </Border>
</Window>